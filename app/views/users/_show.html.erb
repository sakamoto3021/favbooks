<aside class="col-xs-12 col-sm-4">
  <div class="panel panel-default">
    <div class="panel-heading text-center">
      <h4>ユーザー画像</h4>
    </div>
    <div class="panel-body">
      <% if @user.image.file %>
        <img class="media-object img-circle center-block" src="<%= @user.image.url %>" alt="">
      <% else %>
        <img class="media-object img-circle center-block" src="<%= gravatar_url(@user, { size: 100 }) %>" alt="">
      <% end %>
  </div>
</aside>
<div class="col-xs-8">
  <table class="table table-striped table-bordered">
    <tr>
      <td class="text-center">ユーザー名</td>
      <td class="text-center"><%= @user.name %></td>
    </tr>
    <% if current_user == @user %>
      <tr>
        <td class="text-center">メールアドレス</td>
        <td class="text-center"><%= @user.email %></td>
      </tr>
    <% end %>
    <tr>
      <td class="text-center">登録日</td>
      <td class="text-center"><%= @user.created_at.strftime('%Y年%m月%d日') %></td>
    </tr>
  </table>
</div>