<div class="row">
  <h1>プロフィール編集</h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image, 'ユーザー画像' %>
        <%= f.file_field :image %>
        <p><%= f.check_box :remove_image %>プロフィール画像を削除</p>
      </div>
      <div class="pull-right">
        <%= f.submit '戻る', name:'back', class: 'btn' %>
        <%= f.submit '更新', class: 'btn' %>
      </div>
      <%= link_to 'ユーザー情報の削除', @user,data: {confirm: "今までの投稿が全て消去されます。本当に削除してよろしいですか？"}, method: :delete, class:'delete-btn' %>
    <% end %>
  </div>
</div>