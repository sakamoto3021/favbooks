<%= form_for post, url: {action:'confirm'} do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
  <div class="form-group">
    <%= f.label :book_title, '書籍タイトル' %>
    <%= f.text_field :book_title, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content_title,'タイトル' %>
    <%= f.text_field :content_title, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, '本文', class:'pull-left' %>
    <p class='help-block pull-right'>最大全角5,000文字</p>
    <%= f.text_area :content, size: '10x10', class:'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit '確認画面へ', class:'btn btn-primary pull-right' %>
  </div>
<% end %>